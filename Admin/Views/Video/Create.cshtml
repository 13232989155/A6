<script type="text/javascript">
    //
    $("#liVideoList").addClass("current-page");
    $("#ulVideo").show();



    var videoEntity = {
        remark: "",
        url: "",
        imgFile: ""
    }

    var adminVue = new Vue({
        el: "#example",
        data: videoEntity,
        methods: {
            DeleteCoverImage: function () {
                videoEntity.url = "";
                videoEntity.imgFile = "";
            },
            UpdateCoverImage: function () {
                $("#imgFile").trigger("click");
            }
        }
    })

    function Save() {

 
        if (videoEntity.imgFile != "") {
            $("body").mLoading("show");//显示loading组件
            var formData = new FormData();
            formData.append("files", videoEntity.imgFile);

            $.when(UploadFile(formData)).done(function (defer) {
                videoEntity.url = defer[0];
                videoEntity.imgFile = "";
                if (videoEntity.url == "") {
                    ShowPNotify("视频不能为空");
                    return
                }
                $.ajax({
                    type: "post",
                    url: "/Video/Create",
                    data: {
                        remark: videoEntity.remark,
                        url: videoEntity.url,
                    },
                    dataType: "json",
                    success: function (result) {
                      
                        if (result.code == "200") {
                            window.location.href = "/Video/List";
                        }
                        else {
                            ShowPNotify(result.msg)
                        }
                    },
                    error: function () {
                        ShowPNotify("请求错误")
                    },
                    complete: function (XMLHttpRequest, status) {
                        $("body").mLoading("hide");//显示loading组件
                    }
                });
            });


        }
        else {
            ShowPNotify("请先选中文件！");
        }

    }

    function UploadFile(formData) {
        var defer = $.Deferred();
        $.ajax({
            type: "post",
            url: "/Home/UploadFile",
            data: formData,
            dataType: "json",
            contentType: false,
            async: true,
            processData: false,
            success: function (result) {
                if (result.code == "200") {
                    defer.resolve(result.data)
                }
                else {
                    ShowPNotify(result.msg)
                }

            },
            error: function () {
                ShowPNotify("请求错误")
            }
        });
        return defer;
    }

