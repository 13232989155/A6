                                                    <source :src="url" type="video/mp4" />
                                                    <source :src="url" type="video/webm" />
                                                    <source :src="url" type="video/ogg" />
                                                </video>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            </template>

                        </div>
                    </div>


