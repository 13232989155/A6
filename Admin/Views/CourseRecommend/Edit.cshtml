
@{
    ViewData["Title"] = "编辑课程推荐";

}
@model Entity.CourseRecommendEntity

<div class="page-title">
    <div class="title_left">
        <h3>编辑课程推荐</h3>
    </div>
</div>
<link href="~/css/pnotify.css" rel="stylesheet" />
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><small></small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle"><i class="fa fa-wrench"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div id="example" class="x_content">
                <br>
                <form asp-action="Edit" id="demo-form2" class="form-horizontal form-label-left">

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            ID <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" v-model="courseRecommendId" readonly class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            名称 <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" v-model="name" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>

                    <div class="ln_solid"></div>

                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <button class="btn btn-primary" onclick="Save()" type="button">保存</button>
                            <a asp-action="List" class="btn btn-info">返回列表</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/js/pnotify.js"></script>
<script src="~/js/vue.js"></script>
<script src="~/js/a6admin.js"></script>
<script type="text/javascript">
    //
    $("#liCourseRecommendList").addClass("current-page");
    $("#ulCourse").show();

    var courseRecommendEntity = {
        name: "",
        courseRecommendId: ""
    }

    var adminVue = new Vue({
        el: "#example",
        data: courseRecommendEntity,
        beforeCreate: function () {
            courseRecommendEntity.name = "@Html.Raw(Model.name)"
            courseRecommendEntity.courseRecommendId = "@Html.Raw(Model.courseRecommendId)"
        }
    })

    function Save() {
        if (courseRecommendEntity.name == "") {
            ShowPNotify("名称不能为空");
            return
        }

        $.ajax({
            type: "post",
            url: "/CourseRecommend/Edit",
            data: {
                name: courseRecommendEntity.name,
                courseRecommendId: courseRecommendEntity.courseRecommendId,
               
            },
            dataType: "json",
            success: function (result) {

                if (result.code == "200") {
                    window.location.href = "/CourseRecommend/List";
                }
                else {
                    ShowPNotify(result.msg)
                }
            },
            error: function () {
                ShowPNotify("请求错误")
            }
        });
    }


</script>


