

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8">
    <title>登入 - 理赔学堂</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link href="~/css/layui.css" rel="stylesheet" />
    <link href="~/css/Admin.css" rel="stylesheet" />
    <link href="~/css/Login/Login.css" rel="stylesheet" />
</head>

<body style="background-image:url('../../images/Login/bgimg.jpeg')" onkeydown="keyLogin()">

    <div class="layadmin-user-login layadmin-user-display-show" id="LAY-user-login" style="display: none;">

        <div class="layadmin-user-login-main">
            <div class="layadmin-user-login-box layadmin-user-login-header">
                <h2>理赔学堂后台管理系统</h2>
            </div>
            <form method="post">
                <div class="layadmin-user-login-box layadmin-user-login-body layui-form">
                    <div class="layui-form-item">
                        <label class="layadmin-user-login-icon layui-icon layui-icon-username" for="LAY-user-login-username"></label>
                        <input type="text" name="account" id="LAY-user-login-username" lay-verify="required" placeholder="账号..." class="layui-input" style="background:rgba(255,255,255,0.3)">
                    </div>
                    <div class="layui-form-item">
                        <label class="layadmin-user-login-icon layui-icon layui-icon-password" for="LAY-user-login-password"></label>
                        <input type="password" name="password" id="LAY-user-login-password" lay-verify="required" placeholder="密码..." class="layui-input" style="background:rgba(255,255,255,0.3)">

                        @if (ViewBag.msg != null)
                        {
                            <p style="color:red; padding-top:3%"> @ViewBag.msg</p>
                        }
                    </div>
                    <div class="layui-form-item">
                        <button class="layui-btn layui-btn-fluid" id="btnSignIn">登 入</button>
                    </div>
                </div>
            </form>
        </div>

        <div class="layui-trans layadmin-user-login-footer">

            <p>© @DateTime.Now.Year.ToString() <a href="#" target="_blank">佛山市领赟信息技术</a></p>

        </div>
    </div>

    <script type="text/javascript">

        // 回车键登陆
        function keyLogin() {
            if (event.keyCode == 13) {
                document.getElementById("btnSignIn").click();
            }
        }
    </script>

</body>
</html>